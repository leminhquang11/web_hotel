<% if current_page?(root_path) || current_page?("/") %>
  <header class="">
<% else %>
  <header class="black-header">
<% end %>
    <nav class="navbar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-3">
                    <span class="sr-only"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to image_tag("logo.png", alt: "logo", class: "img-responsive pull-left img-logo logo-web"), root_path %>
            </div>
            <div class="collapse navbar-collapse navbar" id="navbar-collapse-3">
                <ul class="nav navbar-nav navbar-left">
                    <li><%= link_to t("Hotels"), hotels_path %></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="li-number">
                        <a href="tel:+84 (0) 98 453 0860"><span class="fa fa-phone text-violet"></span><%= Settings.telephone %></a>
                    </li>
                    <li class="header-login-register">
                      <% if user_signed_in? %>
                        <% if current_user.has_role? :admin %>
                            <%= link_to "Users", users_manage_path %>
                        <% else %>
                            <%= link_to t("profile"), current_user %>
                         <% end %>
                        <%= link_to t("logout"), destroy_user_session_path, method: :delete %>
                      <% else %>
                        <%= link_to t("login"), new_user_session_path %>
                        <%= link_to t("signup"), new_user_registration_path %>
                      <% end %>
                    </li>
                </ul>
                <div class="collapse nav navbar-nav nav-collapse" id="nav-collapse3">
                    <form class="navbar-form navbar-right" role="search">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search" />
                        </div>
                        <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                    </form>
                </div>
            </div>
        </div>
    </nav>
</header>
