<div class="modal" id="create-schedule-item-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          Create new item
          <i class="far fa-calendar-alt fa-lg"></i>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      
      <div class="modal-body">
      <%= form_for(@schedule.schedule_items.build,:url => user_schedule_schedule_items_path(current_user.id, @schedule.id), remote: true) do |f| %>
        <div class="form-group">
          <%= f.label :category, class: "col-form-label" %>
          <%= f.collection_select :category_id, @categories, :id, :name, include_blank: true, required: true%>
        </div>
        <div class="form-group">
          <%= f.label :description, class: "col-form-label" %>
          <%= f.text_field :description, required: true, class: "form-control" %>
        </div>
        <div class = "form-group row">
          <div class="col-md-4">
            <%= f.label :start_time, class: "col-form-label" %>
            <%= f.date_field :start_time, required: true %>
          </div>
        
          <div class="col-md-4">
            <%= f.label :end_time, class: "col-form-label" %>
           <%= f.date_field :end_time, required: true %>
          </div>
        </div>
        <%= f.submit t("button.create"), class: "btn btn-primary" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
