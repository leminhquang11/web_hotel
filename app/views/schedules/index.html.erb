<div class="row">
  <div class="col-md-2">&nbsp;</div>
  <div class="col-md-8">
    <div class="row space-16">&nbsp;</div>
    <div class="row">
      
      <% if user_signed_in? %>
      <div class="col-sm-4">
        <div class="thumbnail custom-fix-size">
          <div class="caption text-center custom-caption-text">
            <a data-toggle="modal" data-target="#create-schedule-modal">
              <h4>Create new Schedule</h4>
              <i class="fas fa-plus-circle fa-2x"></i>
            </a>
          </div>
        </div>
      </div>
      <% end %>
      
      <div id="list-new-schedules">
      </div>  
      <% @schedules.each  do |s| %>
        <%= render :partial => 'schedule', :locals => {:schedule => s} %>
      <% end %>
    </div>
    <div class="col-md-2">&nbsp;</div>
  </div>
</div>
<div>

<div class="modal" id="create-schedule-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          Create new schedule
          <i class="far fa-calendar-alt fa-lg"></i>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      
      <div class="modal-body">
        <%= form_for(current_user.schedules.build,:url => user_schedules_path(current_user), remote: true) do |f| %>
        <div class="form-group">
          <%= f.label :name, class: "col-form-label" %>
          <%= f.text_field :name, required: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description, class: "col-form-label" %>
          <%= f.text_field :description, required: true, class: "form-control" %>
        </div>
        <%= f.submit t("button.create"), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>