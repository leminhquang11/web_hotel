<% provide(:title,"Rooms")%>
<%= render "layouts/search_form" %>
<div class="full-row page-content">
  <div class="container no-padding">

    <div class="col-xs-12 col-sm-9 page-right">
        
      <div class="container packages_home">

        <% @services.each do |service| %>
          <div class="col-xs-6 col-sm-6 col-md-4 package_item">
            <div class="package_item_content">
                <%= link_to image_tag(service.service_images.first.link,  class: "img-responsive custom-size-image"), service_details_path(service.id) %>
                <div class="thumb_content fullwidth">
                    <div class="thumb_title">
                        <div class="tour_country">
                          <%= service.place.name %>
                        </div>
                    </div>
                    
                </div>
            </div>
          </div>
        <% end %>
        </div>
    </div>
  </div>
  <center><%= paginate @services, theme: 'twitter-bootstrap-3' %></center>
</div>