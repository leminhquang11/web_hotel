<% provide :title, current_user.name %>
<div class="container">
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= get_avatar_for(@user) %>
          <%= current_user.name %>
          <%=current_user.email%>
          <%= button_to "Edit Profile", edit_user_registration_path,
                  :class => "btn btn-outline-primary my-2", :method => :get %>
        </h1>
      </section>
    </aside>

    <div class= "col-md-8">
    </div>
  </div>
</div>
